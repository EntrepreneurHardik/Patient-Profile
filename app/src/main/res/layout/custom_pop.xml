                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="info_16"
                        android:textSize="16dp"
                        android:background="#E0E0E0"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="info_17"
                        android:textSize="16dp"
                        android:background="#E0E0E0"/>
