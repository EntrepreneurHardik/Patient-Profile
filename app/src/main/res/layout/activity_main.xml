<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/rxadvance_bg_1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:layout_width="380sp"
                android:layout_height="100sp"
                android:layout_marginTop="98sp"
                android:layout_marginBottom="32sp"
                android:layout_marginLeft="10sp"
                android:alpha="0.7"
                android:src="@drawable/rxadvance_logo_1_318x177"
                />

            <EditText
                android:id="@+id/username"
                android:layout_width="200sp"
                android:layout_height="38sp"
                android:layout_marginTop="34sp"
                android:inputType="text"
                android:textSize="20sp"
                android:hint="username"
                android:paddingTop="4sp"
                android:layout_marginLeft="100sp"
                android:background="@drawable/edittext_layout"
                />

            <EditText
                android:id="@+id/password"
                android:inputType="textPassword"
                android:layout_width="200sp"
                android:layout_height="38sp"
                android:layout_marginTop="10sp"
                android:textSize="20sp"
                android:paddingTop="4sp"
                android:hint="password"
                android:layout_marginLeft="100sp"
                android:background="@drawable/edittext_layout"
                />

            <Button
                android:layout_width="150sp"
                android:layout_height="48sp"
                android:background="@drawable/submit_button_layout"
                android:layout_marginTop="100sp"
                android:layout_marginLeft="123sp"
                android:textAlignment="center"
                android:paddingTop="8sp"
                android:textSize="20sp"
                android:onClick="initialize_submit"
                android:text="Submit"
                android:elevation="4sp"
                />

            <Button
                android:layout_width="150sp"
                android:layout_height="48sp"
                android:layout_marginTop="8sp"
                android:layout_marginLeft="123sp"
                android:textAlignment="center"
                android:paddingTop="8sp"
                android:textSize="20sp"
                android:onClick="initialize_reset"
                android:text="Reset"
                android:elevation="4sp"/>
        </LinearLayout>
    </RelativeLayout>